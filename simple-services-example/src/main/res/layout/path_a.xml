<?xml version="1.0" encoding="utf-8"?>
<com.zhuinden.simpleservicesexample.presentation.paths.a.AView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">

    <TextView
        android:id="@+id/a_textview"
        android:text="A"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/a_button"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to B"
        android:layout_below="@+id/a_textview"
        android:layout_marginTop="24dp"
        android:padding="12dp"/>
</com.zhuinden.simpleservicesexample.presentation.paths.a.AView>